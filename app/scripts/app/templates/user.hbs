<img class="gravatar img-circle" {{bind-attr src="avatarUrl" alt="label" title="uuid"}}>
<div class="user-info">
  {{#if model.label}}<div class="user-label">{{model.label}}</div>{{/if}}
  {{#if model.local_ip}}
    <div class="user-id">
      {{#if model.isConnected}}
        <div class="user-connected"></div>
      {{/if}}
      {{model.local_ip}}
    </div>
  {{/if}}
</div>
