<div id="wrap">
  <nav id="header" class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <h1 class="logo">
        <span class="logo-title">ShareDrop</span>
        <span class="logo-subtitle">P2P file transfer</span>
        <img src="/images/sharedrop.svg">
      </h1>

    </div>

    <div class="collapse navbar-collapse" id="navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        {{#if you.email}}
          <li>
            <span class="navbar-text signed-in">{{you.email}}</span>
          </li>
          <li>
            <a href="javascript:void(0)" class="sign-out" {{action 'signOut'}}>
              <img src="/images/persona.svg">
              Sign out
            </a>
          </li>
        {{else}}
          <li>
            <a href="javascript:void(0)" class="sign-in" {{action 'signIn'}}>
              <img src="/images/persona.svg">
              Sign in
            </a>
          </li>
        {{/if}}
      </ul>
    </div>
  </nav>

  {{outlet}}

  <div class="footer">
    <div class="cowbell-labs">
      Made by
      <a href="https://cowbell-labs.com/" target="_blank">
        <span>Cowbell Labs</span>
        <img src="/images/cowbell-labs.svg">
      </a>
    </div>
    <p class="about">ShairDrop lets you share files with others nearby.</p>
    <a href="https://github.com/cowbell" class="github" target="_blank">
      <img src="/images/github.svg">
    </a>
  </div>

  <svg class="circles" viewBox="-0.5 -0.5 1140 700">
    <circle class="circle" cx="570" cy="570" r="30"  stroke="rgba(160,160,160, 1)" />
    <circle class="circle" cx="570" cy="570" r="100" stroke="rgba(160,160,160,.9)" />
    <circle class="circle" cx="570" cy="570" r="200" stroke="rgba(160,160,160,.8)" />
    <circle class="circle" cx="570" cy="570" r="300" stroke="rgba(160,160,160,.7)" />
    <circle class="circle" cx="570" cy="570" r="400" stroke="rgba(160,160,160,.6)" />
    <circle class="circle" cx="570" cy="570" r="500" stroke="rgba(160,160,160,.5)" />
  </svg>
</div>
