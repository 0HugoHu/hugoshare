{{/confirm-popover}}

{{#confirm-popover confirm="acceptFileTransfer" cancel="rejectFileTransfer" isShowing=transfer.info confirm-button-label="Save" cancel-button-label="Decline"}}
  "{{peer.label}}" wants to send you "{{filename}}".
{{/confirm-popover}}

