{{#confirm-popover confirm="sendFileTransferInquiry" cancel="cancelFileTransfer" isShowing=transfer.file filename=filename confirm-button-label="Send" cancel-button-label="Cancel"}}
  Do you want to send <strong>"{{filename}}"</strong><br>to <strong>"{{peer.label}}"</strong>?
{{/confirm-popover}}

{{#confirm-popover confirm="acceptFileTransfer" cancel="rejectFileTransfer" isShowing=transfer.info filename=filename confirm-button-label="Save" cancel-button-label="Decline"}}
  <strong>"{{peer.label}}"</strong> wants to send you <strong>"{{filename}}"</strong>.
{{/confirm-popover}}

{{view FileDrop.PeerAvatarView}}

<div class="user-info">
  {{#if model.email}}<div class="user-email">{{model.email}}</div>{{/if}}
  {{#if model.local_ip}}
    <div class="user-id">
      {{#if model.isConnected}}
        <div class="user-connected"></div>
      {{/if}}
      {{model.local_ip}}
    </div>
  {{/if}}
</div>

